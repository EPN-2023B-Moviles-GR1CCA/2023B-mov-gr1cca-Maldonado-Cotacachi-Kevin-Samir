<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_mainPaciente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPaciente">

    <TextView
        android:id="@+id/txt_HospitalPadre"
        android:layout_width="230dp"
        android:layout_height="44dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/btn_VolverHospital"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="VOLVER"
        app:layout_constraintEnd_toEndOf="@+id/btn_RegistrarPaciente"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_RegistrarPaciente"
        app:layout_constraintTop_toBottomOf="@+id/btn_RegistrarPaciente" />

    <Button
        android:id="@+id/btn_RegistrarPaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="REGISTRAR"
        app:layout_constraintEnd_toEndOf="@+id/txt_HospitalPadre"
        app:layout_constraintHorizontal_bias="0.336"
        app:layout_constraintStart_toStartOf="@+id/txt_HospitalPadre"
        app:layout_constraintTop_toBottomOf="@+id/txt_HospitalPadre" />

    <TextView
        android:id="@+id/txt_ListaPacientes"
        android:layout_width="177dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="Lista de Pacientes"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_VolverHospital"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="@+id/btn_VolverHospital"
        app:layout_constraintTop_toBottomOf="@+id/btn_VolverHospital" />

    <ListView
        android:id="@+id/lv_listaPatient"
        android:layout_width="307dp"
        android:layout_height="383dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_VolverHospital"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/btn_VolverHospital"
        app:layout_constraintTop_toBottomOf="@+id/btn_VolverHospital" />

</androidx.constraintlayout.widget.ConstraintLayout>