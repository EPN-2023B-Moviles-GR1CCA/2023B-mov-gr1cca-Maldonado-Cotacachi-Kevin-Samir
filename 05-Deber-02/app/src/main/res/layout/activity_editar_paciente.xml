<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarPaciente">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="276dp"
        android:layout_height="57dp"
        android:text="ACTUALIZAR PACIENTE"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

    <EditText
        android:id="@+id/input_nombreUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/input_edadUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Edad"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_nombreUpdate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombreUpdate"
        app:layout_constraintTop_toBottomOf="@+id/input_nombreUpdate" />

    <EditText
        android:id="@+id/input_fechaAdmisionUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Fecha de Admision"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_edadUpdate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_edadUpdate"
        app:layout_constraintTop_toBottomOf="@+id/input_edadUpdate" />

    <EditText
        android:id="@+id/input_pesoUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Peso"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_fechaAdmisionUpdate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_fechaAdmisionUpdate"
        app:layout_constraintTop_toBottomOf="@+id/input_fechaAdmisionUpdate" />

    <EditText
        android:id="@+id/input_alergiasUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Alergias"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_pesoUpdate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_pesoUpdate"
        app:layout_constraintTop_toBottomOf="@+id/input_pesoUpdate" />

    <EditText
        android:id="@+id/input_codHospitalUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Codigo Hospital"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_alergiasUpdate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_alergiasUpdate"
        app:layout_constraintTop_toBottomOf="@+id/input_alergiasUpdate" />

    <Button
        android:id="@+id/btn_updatePaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="ACTUALIZAR"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/input_codHospitalUpdate"
        app:layout_constraintStart_toStartOf="@+id/input_codHospitalUpdate"
        app:layout_constraintTop_toBottomOf="@+id/input_codHospitalUpdate" />
</androidx.constraintlayout.widget.ConstraintLayout>